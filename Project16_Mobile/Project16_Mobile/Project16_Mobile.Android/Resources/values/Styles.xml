<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
      <item name="colorControlNormal">@color/white</item>
      <item name="colorControlActivated">@color/dark_blue</item>
    </style>
  <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/SplashScreen</item>
  </style>
  <style name="TextInput" parent="TextAppearance.AppCompat">
    <!-- Hint color and label color in FALSE state -->
    <item name="android:textColorHint">@color/gray</item>
    <item name="android:textSize">20sp</item>
    <item name="colorPrimaryDark">@color/gray</item>
    <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    <item name="colorAccent">@color/dark_blue</item>
    <item name="colorControlNormal">@color/gray</item>
    <item name="colorControlActivated">@color/dark_blue</item>
  </style>

  <style name="CustomAppCompatTheme"
          parent="Theme.AppCompat.Light.DarkActionBar">
     <item name="actionBarStyle">@style/MyActionBar</item>
   <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
   <item name="android:textColorSecondary">@color/white</item>

    <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>


  
  </style>



  <style name="DashboardAppCompatTheme"
         parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="actionBarStyle">@style/MyActionBar</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    <item name="android:textColorSecondary">@color/white</item>

    <item name="colorPrimary">@color/dark_blue</item>
    <item name="colorPrimaryDark">@color/gray</item>
    <item name="colorAccent">@color/gray</item>



  </style>

  <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorPrimary">#00397F</item>
    <item name="android:textColorPrimary">#22397F</item>
    <item name="android:textColorSecondary">#22397F</item>
    <item name="colorAccent">#00397F</item>
    <item name="colorPrimaryDark">#22397F</item>
    <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
  </style>

  <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
    <item name="android:textColor">@color/dark_blue</item>
  </style>

  <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
    <item name="android:textColor">@color/dark_blue</item>
  </style>
<style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
  
    <item name="color">@color/white</item> 
</style>
  <!-- ActionBar styles -->
  <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
    <item name="titleTextStyle">@style/MyTitleTextStyle</item>
  
      <item name="android:textColorSecondary">@color/white</item>

</style>
<style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@color/white</item>
    
</style>
</resources>
